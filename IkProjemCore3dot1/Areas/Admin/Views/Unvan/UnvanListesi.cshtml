@model List<IkProjemCore3dot1.Models.Unvan>
@{
    ViewBag.Title = "UnvanListesi"; 
} 

<h2>Ünvan Listesi</h2>
<div class="d-flex flex-row-reverse p-2">
    <a class="btn btn-danger" asp-area="Admin" asp-controller="Unvan" asp-action="UnvanEkleme">Ünvan Ekleme +</a>
</div>

<div class="col-12">
    <table class="table table-dark">
        <thead>
            <tr>
                <td>Ünvan Ad</td>
                <td>İşlemler</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ReservedName</th>

                    <th scope="row">   <a class="btn btn-success" asp-area="Admin" asp-controller="Unvan" asp-action="UnvanDuzenle" asp-route-id="@item.Id">Düzenle </a></th>

                    @if (item.AktifMi == 1)
                    {
                        <th scope="row"><a href="@Url.Action("UnvanSil","Unvan", new {Area="Admin", Id = item.Id})" class="btn btn-outline-danger"> Sil</a></th>
                    }
                    else
                    {
                        <th scope="row"><a href="@Url.Action("UnvanAktifEt","Unvan", new {Area="Admin", Id = item.Id})" class="btn btn-outline-success"> Aktif Et</a></th>
                    }


                </tr>
            }

        </tbody>
    </table> 
</div>
@await Component.InvokeAsync("Iletisim")